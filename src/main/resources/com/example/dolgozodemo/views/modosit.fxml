<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<GridPane hgap="5.0" prefWidth="200.0" vgap="5.0" xmlns="http://javafx.com/javafx/11.0.2"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dolgozodemo.controllers.ModositController">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="50.0" minWidth="50.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" prefWidth="150.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="30.0" minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30.0" minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30.0" minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30.0" minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30.0" minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="Név:"/>
        <TextField fx:id="nevField" promptText="Név" GridPane.columnIndex="1"/>
        <Label text="Nem:" GridPane.rowIndex="1"/>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="1"
              GridPane.rowIndex="1">
            <children>
                <RadioButton fx:id="radioFerfi" mnemonicParsing="false" onAction="#ferfiClick" selected="true"
                             text="Férfi"/>
                <RadioButton fx:id="radioNo" mnemonicParsing="false" onAction="#noClick" text="Nő"/>
            </children>
        </HBox>
        <Label text="Kor:" GridPane.rowIndex="2"/>
        <Label text="Fizetés:" GridPane.rowIndex="3"/>
        <Spinner fx:id="korSpinner" editable="true" prefWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="1" initialValue="20" max="150"
                                                                min="10"/>
            </valueFactory>
        </Spinner>
        <Spinner fx:id="fizetesSpinner" editable="true" prefWidth="Infinity" GridPane.columnIndex="1"
                 GridPane.rowIndex="3">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="1000" initialValue="100000"
                                                                max="1000000" min="75000"/>
            </valueFactory>
        </Spinner>
        <Button onAction="#modositClick" prefWidth="Infinity" text="Módosít" GridPane.columnIndex="1"
                GridPane.rowIndex="4"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>

